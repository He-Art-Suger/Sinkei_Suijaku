		    		b1[1].setForeground(Color.black);
		    		b2[1].setForeground(Color.gray);
		    		b3[1].setForeground(Color.gray);
		    		
		    		bflag[3] = true;
		    		bflag[4] = false;
		    		bflag[5] = false;
		        }
		    }
		    
